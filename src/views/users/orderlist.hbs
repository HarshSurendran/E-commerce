<body>
    <div class="screen-overlay"></div>        
    <main class="main-wrap">            
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Your Orders</h2>
                    <p>Recent Orders</p>
                </div>
                <div>
                    <input type="text" placeholder="Search order ID" class="form-control bg-white" />
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <input type="text" placeholder="Search..." class="form-control" />
                        </div>
                        {{!-- <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select">
                                <option>Status</option>
                                <option>Active</option>
                                <option>Disabled</option>
                                <option>Show all</option>
                            </select>
                        </div>
                        <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select">
                                <option>Show 20</option>
                                <option>Show 30</option>
                                <option>Show 40</option>
                            </select>
                        </div> --}}
                    </div>
                </header>
                <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#ID</th>
                                    <th scope="col">Ship to</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Date</th>
                                    <th scope="col" class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each order}}
                                {{#each orders.orderedItems}}
                                <tr>
                                    <td>{{this.images.[0]}}</td>
                                    <td><b>{{this.product.name}}</b> <br> {{this.product.category}}</td>
                                    <td>{{this.user.price}}</td>
                                    <td>{{this.orderAmount}}</td>
                                    <td><span class="badge rounded-pill {{changeColor order.[@index].status}}">{{this.status}}</span></td>
                                    {{!-- <td>{{this.createdAt}}</td> --}}
                                    {{!-- <td class="text-end"> --}}
                                        {{!-- <div class="dropdown">
                                            <a href="#" data-bs-toggle="dropdown" class="btn btn-light rounded btn-sm font-sm"> <i class="material-icons md-more_horiz"></i> </a>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" href="#">View detail</a>
                                                <a class="dropdown-item" href="#">Edit info</a>
                                                <a class="dropdown-item text-danger" href="#">Delete</a>
                                            </div>
                                        </div> --}}
                                        <a href="/api/v1/admin/orderdetails/{{this._id}}" class="btn btn-md rounded font-sm">Detail</a>
                                        <!-- dropdown //end -->
                                    </td>
                                </tr>
                                {{/each}}   
                                {{/each}}                            
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            {{#each order}}
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-4">
                            OrderId: <b>{{this.orderId}}</b> <br> Date: <b>{{this.createdAt}}</b>
                        </div>
                        <div class="col-4">
                            Total: <b>â‚¹{{this.orderAmount}}</b> <br> Status: <b>{{this.status}}</b>
                        </div>
                        <div class="col-4 d-flex justify-content-between   align-items-center ">
                            Shipped to:   <b>{{this.address.fullname}}</b>
                        </div>
                    </div>
                </div>
                {{#each this.orderedItems}}
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-2 ">
                            <img src="{{this.images.[0]}}" width="40" height="40" class="img-xs" alt="Item" />
                        </div>
                        <div class="col-lg-4">
                            <div class="row">
                                <div class="col-10">
                                <h5 class="card-title">{{this.product.name}}</h5>
                                </div>
                                <div class="col-2">
                                <h5 class="card-title">{{this.quantity}}</h5>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4">
                                <p class="card-text">{{this.product.category}}</p>
                                </div>
                                <div class="col-4">
                                <p class="card-text">{{this.size}}</p>
                                </div>
                                <div class="col-4">
                                <p class="card-text">{{this.color}}</p>
                                </div>
                            </div>                        
                        </div>
                        <div class="col-lg-4">
                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                        </div>
                        <div class="col-lg-2">
                        <a href="#" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/each}}
        </section>
    </main>
</body>

