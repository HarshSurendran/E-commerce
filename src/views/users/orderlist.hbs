<body>
    <div class="screen-overlay"></div>        
    <main class="main-wrap">            
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Your Orders</h2>
                    <p>Recent Orders</p>
                </div>
                <div>
                    <input type="text" placeholder="Search order ID" class="form-control bg-white" />
                </div>
            </div>
            <div class="card mb-4">
                <header style="background-color: #d8f1e5;" class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <input type="text" placeholder="Search..." class="form-control" />
                        </div>
                        {{!-- <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select">
                                <option>Status</option>
                                <option>Active</option>
                                <option>Disabled</option>
                                <option>Show all</option>
                            </select>
                        </div>
                        <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select">
                                <option>Show 20</option>
                                <option>Show 30</option>
                                <option>Show 40</option>
                            </select>
                        </div> --}}
                    </div>
                </header>
                
            </div>
            {{#each order}}
            <div class="card">
                <div style="background-color: #d8f1e5;" class="card-header">
                    <div class="row">
                        <div class="col-4">
                            OrderId: <b>{{this.orderId}}</b> <br> Date: <b>{{this.createdAt}}</b>
                        </div>
                        <div class="col-4">
                            Total: <b>â‚¹{{this.orderAmount}}</b> <br> Status: <b>{{this.status}}</b>
                        </div>
                        <div class="col-4 d-flex justify-content-between   align-items-center ">
                            Shipped to:   <b>{{this.address.fullname}}</b>
                        </div>
                    </div>
                </div>
                {{#each this.orderedItems}}
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-2 ">
                            <img src="{{this.images.[0]}}" width="80" height="80" class="img-md" alt="Item" />
                        </div>
                        <div class="col-lg-4">
                            <div class="row">
                                <div class="col-10">
                                <h5 class="card-title">{{this.product.name}}</h5>
                                </div>
                                <div class="col-2">
                                <h5 class="card-title">{{this.quantity}}</h5>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4">
                                <p class="card-text">{{this.product.category}}</p>
                                </div>
                                <div class="col-4">
                                <p class="card-text">{{this.size}}</p>
                                </div>
                                <div class="col-4">
                                <p class="card-text">{{this.color}}</p>
                                </div>
                            </div>                        
                        </div>
                        <div class="col-lg-4">
                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                        </div>
                        <div class="col-lg-2">
                        <a href="#" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/each}}
        </section>
    </main>
</body>

