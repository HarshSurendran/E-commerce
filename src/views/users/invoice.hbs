    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <div class="container mt-5 pt-5  ">
        <div class="col-md-12">
            <div class="invoice">

                <div class="invoice-company text-inverse f-w-600">
                    <span class="pull-right hidden-print">
                        <a href="javascript:;" class="btn btn-sm btn-white m-b-10 p-l-5" id="exportPdf" ><i
                                class="fa fa-file t-plus-1 text-danger fa-fw fa-lg"></i> Export as PDF</a>
                        <a href="javascript:;" onclick="window.print()" class="btn btn-sm btn-white m-b-10 p-l-5"><i
                                class="fa fa-print t-plus-1 fa-fw fa-lg"></i> Print</a>
                    </span>
                   OUR SHOP, Inc
                </div>


                <div class="invoice-header">
                    <div class="invoice-from">
                        <small>From</small>
                        <address class="m-t-5 m-b-5">
                            <strong class="text-inverse">Our Shop, Inc.</strong><br>
                            Kinfra<br>
                            Malappuram, 10425<br>
                            Phone: (91) 123456890<br>
                            Fax: (123) 456-7890
                        </address>
                    </div>
                    <div class="invoice-to">
                        <small>To</small>
                        <address class="m-t-5 m-b-5">
                            <strong class="text-inverse">{{orderData.addressName}}</strong><br>
                            {{orderData.addressLine1}}<br>
                            {{orderData.addressLine2}}<br>
                             {{orderData.city}}<br>
                              {{orderData.state}}<br>
                            Phone: {{orderData.mobile}}<br>
                            Pincode: {{orderData.pincode}}
                        </address>
                    </div>
                    <div class="invoice-date">
                        <small>Invoice </small>
                        <div class="date text-inverse m-t-5">{{orderData.datejoined}}</div>
                        <div class="invoice-detail">
                            #{{orderData.orderNo}}S<br>
                            online shopping
                        </div>
                    </div>
                </div>


                <div class="invoice-content">

                    <div class="table-responsive">
                        <table class="table table-invoice">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th class="text-center" width="10%">RATE</th>
                                    <th class="text-center" width="10%">QTY</th>
                                    <th class="text-center" width="10%">Discount</th>
                                    <th class="text-right" width="20%">LINE TOTAL</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each productData}}
                                <tr>
                                    <td>
                                        <span class="text-inverse">{{this.product_name}}</span><br>
                                        <small>{{this.about_product}}</small>
                                    </td>
                                    <td class="text-center">₹ {{this.price}}</td>
                                    <td class="text-center">{{this.quantity}}</td>
                                    <td class="text-center">₹ 0</td>
                                    <td class="text-right">{{multiply this.price this.quantity}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>


                    <div class="invoice-price">
                        <div class="invoice-price-left">
                            <div class="invoice-price-row">
                                <div class="sub-price">
                                    <small>SUBTOTAL</small>
                                    <span class="text-inverse">₹ {{orderData.orderAmount}}</span>
                                </div>
                                <div class="sub-price">
                                    <i class="fa fa-plus text-muted"></i>
                                </div>
                                <div class="sub-price">
                                    <small> FEE</small>
                                    <span class="text-inverse">₹ 0.00</span>
                                </div>
                            </div>
                        </div>
                        <div class="invoice-price-right">
                            <small>TOTAL</small> <span class="f-w-600">₹ {{orderData.orderAmount}}</span>
                        </div>
                    </div>

                </div>


                <div class="invoice-note">
                    * Make all cheques payable to [Your Company Name]<br>
                    * Payment is due within 30 days<br>
                    * If you have any questions concerning this invoice, contact [Name, Phone Number, Email]
                </div>


                <div class="invoice-footer">
                    <p class="text-center m-b-5 f-w-600">
                        THANK YOU FOR YOUR BUSINESS
                    </p>
                    <p class="text-center">
                        <span class="m-r-10"><i class="fa fa-fw fa-lg fa-globe"></i> matiasgallipoli.com</span>
                        <span class="m-r-10"><i class="fa fa-fw fa-lg fa-phone-volume"></i> T:016-18192302</span>
                        <span class="m-r-10"><i class="fa fa-fw fa-lg fa-envelope"></i> <a
                                href="/cdn-cgi/l/email-protection" class="_cf_email_"
                                data-cfemail="94e6e0fdf1f9e4e7d4f3f9f5fdf8baf7fbf9">[email&#160;protected]</a></span>
                    </p>
                </div>

            </div>
        </div>
    </div>

    <script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
