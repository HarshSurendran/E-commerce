                console.log("This  is cart id", id)
                    const confirmation = window.confirm("Are you sure you want to delete this item from the cart?");


                if(confirmation){
                    fetch("/api/v1/users/cart", {
                        method: "DELETE",
                        headers: {
                            "content-type": "application/json"
                        },
                        body : JSON.stringify({
                            id
                        })
                    }).then( (res)=>{
                        if(!res.ok){
                            console.log("somethign wronf")
