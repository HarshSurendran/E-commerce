<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>
    <!-- Checkout Section Begin -->
    <section class="checkout spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="coupon__link text-success ">Hureyy..! Order placed successfully!!</h2>
                </div>
            </div>
            <form action="/api/v1/users/home" class="checkout__form">
                <div class="row">
                    <div class="col-lg-8">
                        <h5>Shipping details</h5>
                        <div class="row">
                            <h4 class="ms-3 ">Address :</h4>
                            <div class="col-lg-12">
                                <div class="card-body">  
                                    <div class="col">
                                        <div class="card">
                                            <h5 class="card-header text-center  bg-dark text-white">{{address.type}}</h5>
                                            <div class="card-body">
                                                <h6 class="card-title">Full Name: <span>{{address.fullname}}</span></h6>
                                                <p class="card-text"></p>
                                                <p class="card-text">Phone: <span>{{address.phone}}</span></p>
                                                <p class="card-text">Street: <span>{{address.street}}</span></p>
                                                <p class="card-text">Locality: <span>{{address.locality}}</span></p>
                                                <p class="card-text">District: <span>{{address.district}}</span></p>
                                                <p class="card-text">State: <span>{{address.state}}</span></p>
                                                <p class="card-text">Pin code: <span>{{address.pincode}}</span></p>
                                                {{!-- <div class="d-flex justify-content-center ">
                                                <a href="/api/v1/users/editaddress/{{this._id}}" class="btn btn-primary ">Edit</a>
                                                </div> --}}
                                            </div>
                                        </div>                             
                                    </div>       
                                </div>
                                <p class="text-center mt-3 " >Products will be shipped within 1-3 working days</p>
                            </div>
                        </div>
                    </div> 
                    <div class="col-lg-4">
                        <div class="checkout__order">
                            <h5 class="text-center" >Order confirmed</h5>
                            <div class="checkout__order__product">
                                <ul style="padding-left: 0px !important;">
                                    <li>
                                        <span class="top__text">Order No.</span>
                                        <span class="top__text__right">{{order.orderId}}</span>
                                    </li>
                                    <li>Payment method <span>{{order.paymentMethod}}</span></li>
                                    
                                </ul>
                                <div class="d-flex justify-content-center">
                                    <a href="#" >View invoice</a>                                    
                                </div>
                            </div>
                            <div class="checkout__order__total">
                                <ul style="padding-left: 0px !important;">
                                    <li>Subtotal <span>₹ {{order.orderAmount}}</span></li>
                                    <li>Total <span>₹ {{order.orderAmount}}</span></li>
                                </ul>
                            </div>
                            <p class="text-center">Thank you for your order.</p>
                            <button type="submit" class="site-btn">Continue Shoping</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- Footer Section Begin -->
    <footer class="footer">
        <div class="container-fluid ">
            <div class="row">
                <div class="col-lg-12">
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    <div class="footer__copyright__text">
                        <p>Copyright &copy; <script>document.write(new Date().getFullYear());</script> All rights reserved | Made with love from <b>Urbane Wardrobe.</b></p>
                    </div>
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->

    <!-- Search Begin -->
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch">+</div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Search here.....">
            </form>
        </div>
    </div>
    <!-- Search End -->
</body>
