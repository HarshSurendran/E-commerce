            },
            body: JSON.stringify({   
                userId,             
                fullname,                
                phone,
                dateofbirth
            })
            .then( response => response.json())
            .then((data)=>{
                if(data){
                    showNotification("Details saved");
                    console.log(data);
                }
            })
        });*/
        fetch("/api/v1/users/details", {
            method: "PATCH",
            headers: {
                "content-type": "application/json"
            },
            body: JSON.stringify({
                userId,
                fullname,
                phone,
                dateofbirth
            })
        })
            .then(response => response.json())
            .then((data) => {
                if (data) {
                    showNotification("Details saved");
                    console.log(data);
                }
            });

    });

</script>